<% provide(:title, @user.email) %>
<div class="row">
  <aside class="span4">
    <section>
      	<%= render 'shared/user_info' %>
	<section>
	<%= render 'shared/stats' %>
	  <% if @friends.any? %>
	   <div class="user_avatars">
         <% @friends.each do |friend| %>
         <%= link_to gravatar_for(friend, size: 30), '/friends/' + friend.id.to_s %>
         <% end %>
       </div>
     <% end %>
	</section>
  </aside>
<div class="span8">
    <% if @user.transactions.any? %>
      <h3>Transactions (<%= @user.transactions.count %>)</h3>
      <ol class="transactions">
        <%= render @transactions %>
      </ol>
      <%= will_paginate @transactions %>
    <% end %>
  </div>
</div>